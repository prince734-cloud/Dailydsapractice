#include <iostream>
#include<vector>
using namespace std;

class Node {
    public:
    int data;
    Node* left;
    Node* right;
    
   Node(int val){
       data = val;
       left = right =NULL;
   }
};

static int idx =-1;

Node* builtree(vector<int> tree){
    idx++;
   if(tree[idx]==-1) return NULL;
   Node* root =new Node(tree[idx]);
    root->left = builtree(tree);
    root->right = builtree(tree);
    return root;
}
int height(Node* root){
    if(root==NULL) return 0;
   int lef=height(root->left);
    int rig=height(root->right);
    return max(rig , lef)+1;

}
int count (Node* root){
    if(root==NULL) return 0;
    int lef=count(root->left);
    int rig=count(root->right);
    return lef+rig+1;
}

int main()
{
    vector<int> tree={1,2,-1,-1,3,4,-1,-1,5,-1,-1};
    Node* root = builtree(tree);
    cout<<"height : " <<height(root)<<endl;
    cout<<"count : " <<count(root)<<endl;
    
   

    return 0;
}
