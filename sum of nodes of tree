#include <iostream>
#include <vector>
using namespace std;

class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int val) {
        data = val;
        left = right = nullptr;
    }
};

// global index for building the tree.
static int idx;

// Builds a binary tree from preorder vector (with -1 representing NULL).
Node* buildFromPreorder(const vector<int> &preorder) {
    idx++;
    if (idx >= (int)preorder.size()) {
        // out of bounds: no more data
        return nullptr;
    }
    if (preorder[idx] == -1) {
        return nullptr;
    }

    Node* root = new Node(preorder[idx]);
    root->left = buildFromPreorder(preorder);
    root->right = buildFromPreorder(preorder);
    return root;
}

// Computes sum of all node->data in the tree
int sumOfTree(Node* root) {
    if (root == nullptr) return 0;
    int leftSum = sumOfTree(root->left);
    int rightSum = sumOfTree(root->right);
    return root->data + leftSum + rightSum;
}

// Preorder traversal print: root, left, right.
void printPreorder(Node* root) {
    if (root == nullptr) return;
    cout << root->data << " ";
    printPreorder(root->left);
    printPreorder(root->right);
}

int main() {
   

    vector<int> preorder = {1, 2, -1, -1, 3, 4, 5};

    idx = -1;
    Node* root = buildFromPreorder(preorder);
    if (!root) {
        cout << "Tree is empty or invalid preorder data\n";
        return 0;
    }

    cout << "Preorder of constructed tree: ";
    printPreorder(root);
    cout << "\n";

    int s = sumOfTree(root);
    cout << "Sum of all nodes = " << s << "\n";

    return 0;
}
